#!/usr/bin/env bash

# Warning: You should run this from rootless Docker (or Podman, or other)

set -e

DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."
WORKING_DIR="/app/dotnet"

docker run --rm \
  -v "${ROOT_DIR}:${WORKING_DIR}" \
  -w "${WORKING_DIR}" \
  -u root:root \
  mcr.microsoft.com/dotnet/sdk:6.0 "$@"
